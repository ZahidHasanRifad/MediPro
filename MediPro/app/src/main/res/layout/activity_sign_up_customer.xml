          <RadioGroup
               android:id="@+id/radio_user_group"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <RadioButton
                   android:id="@+id/customer_radio_button"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Customer"/>
               <RadioButton
                   android:id="@+id/pharmacyowner_radio_button"
