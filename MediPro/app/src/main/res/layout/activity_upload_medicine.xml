<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".UploadMedicine">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine Information"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expairy Date"
                android:layout_marginTop="100dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">



                <EditText
                    android:id="@+id/expairyDate"
                    android:layout_width="100dp"
                    android:hint="Date"
                    android:textSize="20sp"
                    android:layout_height="70dp" />

                <EditText
                    android:id="@+id/expairyMonth"
                    android:layout_width="100dp"
                    android:hint="Month"
                    android:textSize="20sp"
                    android:layout_height="70dp" />

                <EditText
                    android:id="@+id/expairyYear"
                    android:layout_width="100dp"
                    android:hint="Year"
                    android:textSize="20sp"
                    android:layout_height="70dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/price"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Tk"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/imgofmedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image of Medicine"
                android:textSize="20sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/submitmedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="20sp"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Medicines"
                android:textSize="20sp"
                android:textAllCaps="false"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>